
@{
    ViewBag.Title = "CheckSchedule";
    Layout = "~/Views/Shared/_doubleLongBigPhoto.cshtml";
}
<link href="~/Content/Css/Home/Index.css" rel="stylesheet" />
<link href="~/Content/JQGridTheme/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/JQGridTheme/ui.multiselect.css" rel="stylesheet" />
<link href="~/Content/JQGridTheme/ui.jqgrid.css" rel="stylesheet" />
<link href="~/Content/JQGridTheme/JqGridStyle.css" rel="stylesheet" />
<script src="~/Scripts/Lib/CheckSchedule/IndexTableAttendance.js"></script>

<link href="~/Content/Css/Schedule/CheckSchedule.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" media="screen" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />

@section LeftContent{
    <div id="CollaboratorContainer">
        <div class="searchOptions fieldset">
            <h6>Seleccione un colaborador para ver el regitro de asistencia.</h6>
        </div>
        <div id="CollaboratorTable" class="fieldset">
            <table id="jqGrid"></table>
            <div id="jqGridPager"></div>
        </div>
    </div>
}

@section RightContent{
    <div id="AssistanceContainer">
        <div class="searchOptions fieldset">     
            <div>
                <label for="beginDate">Fecha Inicial:</label>
                <input type="date" id="beginDate" name="beginDate">

                <label for="endDate">Fecha Final:</label>
                <input type="date" id="endDate" name="endDate">

                <button id="filterButton">Filtrar</button>
                <button id="refreshButton">Refresh</button>
            </div>
        </div>

        <div id="AssistanceTable" class="fieldset">
            <table id="jqGrid2"></table>
            <div id="jqGridPager2"></div>
        </div>

        <div id="TotalHoursWorked" class="fieldset">
            <label for="totalHoursTextbox">Total horas laboradas:</label>
            <input type="text" id="totalTimeTextbox" readonly />
        </div>
    </div>
}

<div id="EditAssistanceModal" class="modalContainer">
    @Html.Partial("../Schedule/EditAssistanceModal")
</div>

<script src="~/Scripts/Lib/Modal.js"></script>
<script src="~/Scripts/JqGrid/jquery.min.js"></script>
<script src="~/Scripts/JqGrid/jquery-ui.min.js"></script>
<script src="~/Scripts/JqGrid/ui.multiselect.js"></script>
<script src="~/Scripts/JqGrid/grid.locale-es.js"></script>
<script src="~/Scripts/JqGrid/jquery.jqGrid.min.js"></script>
<script src="~/Scripts/JqGrid/context-menu.js"></script>
<script src="~/Scripts/Lib/CheckSchedule/IndexTableCollaborator.js"></script>
<script src="~/Scripts/Lib/CheckSchedule/IndexTableAttendance.js"></script>