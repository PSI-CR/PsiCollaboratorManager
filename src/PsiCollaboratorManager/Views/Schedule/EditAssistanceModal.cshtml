
@{
    ViewBag.Title = "EditAssistanceModal";
    Layout = "~/Views/Shared/_modalSmall.cshtml";
}
<link href="~/Content/Css/Schedule/EditAssistanceModal.css" rel="stylesheet" />

<div id="EditAssistanceModalContent">
    <div id="EditAssistanceModalDate" class="fieldset editAssistanceModalSection">
        <label for="checkin">Entrada</label>
        <input type="text" class="form-control" id="checkin" name="checkin">
        <label for="checkinstatuswork">Estado entrada</label>
        <select class="form-control" id="checkinstatuswork" name="checkinstatuswork">
            <!-- Add options for checkin status -->
            <option value="1">Hora Extra</option>
            <option value="2">Tiempo Reposición</option>
            <option value="3">Llegada temprano</option>
            <option value="4">Llegada tardía</option>
            <option value="5">Llegada tardía justificada</option>
        </select>
    </div>
    <div id="EditAssistanceModalState" class="fieldset editAssistanceModalSection">
        <label for="checkout">Salida</label>
        <input type="text" class="form-control" id="checkout" name="checkout">
        <label for="checkoutstatuswork">Estado Salida</label>
        <select class="form-control" id="checkoutstatuswork" name="checkoutstatuswork">
            <!-- Add options for checkout status -->
            <option value="1">Indefinido</option>
            <option value="2">Hora Extra</option>
            <option value="3">Tiempo Reposición</option>
            <option value="4">Llegada temprano</option>
            <option value="5">Llegada tardía</option>
            <option value="6">Llegada tardía justificada</option>
        </select>
    </div>
    <div id="EditAssistanceModalComent" class="fieldset editAssistanceModalSection">
        <input type="text" class="form-control" id="attendanceid" name="attendanceid" readonly hidden="hidden">
        <input type="text" class="form-control" id="collaboratorid" name="collaboratorid" readonly hidden="hidden">
        <label for="commentcheckin">Comentario</label>
        <input type="text" class="form-control" id="commentcheckin" name="commentcheckin">
        <div>
            <input type="checkbox" class="form-check-input" id="isopencheckin" name="isopencheckin">
            <label class="form-check-label" for="isopencheckin">Pendiente</label>
        </div>
    </div>
    <div id="EditAssistanceModalFooter" class="fieldset">
        <button type="button" onclick="CloseModal('EditAssistanceModal')" class="btn btn-secondary"> Cancelar </button>
        <input id="CheckScheduleEditButton" type="button" value="Guardar" class="btn btn-success">
    </div>
</div>

