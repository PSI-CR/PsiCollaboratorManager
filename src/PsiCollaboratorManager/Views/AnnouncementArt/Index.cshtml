@using PSIEmployeeManagement.Models
@model List<AnnouncementArtModel>

@{
    Layout = "~/Views/Shared/_basicLarge.cshtml";
}
<link href="~/Content/Css/AnnouncementArt/Index.css" rel="stylesheet" />

<div id="AnnouncementArtContainer">
    <div id="AddAnnouncementArtContainer" class="fieldset">
        <h4>Agregar Anuncio</h4>
        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "AnnouncementArt")'">
            +
        </button>
    </div>
    <div id="AnnouncementArtCardContainer" class="fieldset">
        @foreach (var announcement in Model)
         {
            <div class="announcementArtCard fieldset">
                <img src="data:image/jpeg;base64,@announcement.ImageAnnouncement" />
                <div class="announcementArtCardDates">
                    <div>
                        <label>Fecha Inicial:</label>
                        <input type="text" readonly value="@announcement.BeginDatePublication.ToString("dd/MM/yyyy")">
                    </div>
                    <div>
                        <label>Fecha Final:</label>
                        <input type="text" readonly value="@announcement.EndDatePublication.ToString("dd/MM/yyyy")">
                    </div>
                    <div class="announcementArtCardButtons">
                        <button title="Editar anuncio" class="btn btn-primary" onclick="editAnnouncementArt(@announcement.AnnouncementId)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16" style=" margin-left: -3px;">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                            </svg>
                        </button>
                        <button title="Eliminar anuncio" class="btn btn-danger delete-button" onclick="deleteAnnouncementArt(@announcement.AnnouncementId)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16" style=" margin-left: -3px; margin-top: 3px;">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
