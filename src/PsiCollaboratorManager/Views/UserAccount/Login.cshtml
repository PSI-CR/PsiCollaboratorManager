@model PsiCollaboratorManager.Models.UserAccount.LoginModel
@using PsiCollaboratorManager.Models;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Servicio PSI Internacionales S.A.</title>

    <link href="~/Content/Css/UserAccount/Login.css" rel="stylesheet" />
</head>
<body>
    <div id="LoginGrid">
        <div id="CompanySection">
            <h1>Servicio PSI <br> Internacionales S.A.</h1>
            <img id="LoginCrown" src="~/Images/CrownWhite.png"/>
            <h3>PSI Collaborator Manager <br> Version: @ViewData["AppVersion"]</h3>
        </div>
        <div id="LoginFormSection">
            @using (Html.BeginForm("VerifyUserAccount", "UserAccount", FormMethod.Post, new { enctype = "multipart/form-data", id = "LoginForm" }))
            {
                @Html.AntiForgeryToken()
                <h2>Iniciar Sesión</h2>
                <div>
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                        </svg>
                    </span>
                    @Html.TextBoxFor(model => model.UserName, new { placeholder = "Usuario" })
                </div>

                <div>
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                        </svg>
                    </span>
                    @Html.PasswordFor(model => model.Password, new { placeholder = "Contraseña" })
                </div>
                <button class="loginButton" type="submit">INGRESAR</button>
            }
        </div>
        <div id="MessageSection">
            @if (TempData["UserMessage"] != null)
            {
                var message = (MessageModel)TempData["UserMessage"];
                <strong>@message.Title</strong>
                <p>@message.Message</p>
            }
        </div>
    </div>
</body>
</html>